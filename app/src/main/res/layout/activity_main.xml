<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.flyaway.app.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginRight="40dp"
        android:id="@+id/tvTitle"
        android:layout_marginTop="23dp" android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="One Way"
        tools:layout_editor_absoluteX="260dp" tools:layout_editor_absoluteY="29dp"
        tools:text="Round Trip"
        android:layout_below="@+id/tvTitle" android:layout_alignParentEnd="true"/>
    <TextView
        android:id="@+id/tvFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="@string/from"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        tools:layout_editor_absoluteX="260dp"
        tools:layout_editor_absoluteY="94dp"
        android:layout_marginTop="21dp" android:layout_below="@+id/switch1"
        android:layout_toStartOf="@+id/tvTitle" android:layout_marginEnd="34dp"/>
    <TextView
        android:id="@+id/tvTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="@string/to"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="94dp"
        android:layout_above="@+id/actvFrom" android:layout_toStartOf="@+id/switch1"/>
    <EditText
        android:id="@+id/etToDate"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="@string/mm_dd_yy"
        android:inputType="date"
        android:clickable="true"
        android:longClickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="194dp"
        android:layout_below="@+id/actvFrom"
        android:layout_alignEnd="@+id/actvTo"/>
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false" android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false" android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" android:elevation="0dp"
        android:text="@string/search" tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="284dp"/>
    <AutoCompleteTextView
        android:id="@+id/actvFrom"
        android:layout_width="115dp"
        android:layout_height="46dp"
        android:layout_below="@+id/tvFrom" android:layout_toStartOf="@+id/button"
        tools:layout_editor_absoluteX="233dp"
        tools:layout_editor_absoluteY="134dp"/>
    <AutoCompleteTextView
        android:id="@+id/actvTo"
        android:layout_width="115dp"
        android:layout_height="46dp"
        tools:layout_editor_absoluteX="33dp" tools:layout_editor_absoluteY="134dp"
        android:layout_below="@+id/tvTo" android:layout_toEndOf="@+id/button"/>
    <EditText
        android:id="@+id/etFromDate"
        android:clickable="true"
        android:longClickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etToDate"
        android:layout_alignStart="@+id/actvFrom"
        android:ems="10"
        android:hint="@string/mm_dd_yy"
        android:inputType="date"
    />

</RelativeLayout>
