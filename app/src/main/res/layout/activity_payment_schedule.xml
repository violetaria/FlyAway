<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.flyaway.app.PaymentSchedule">

    <TextView
        android:id="@+id/tvPayTodayValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvPayment1"
        android:layout_alignEnd="@+id/tvPaymentSchedule"
        android:layout_alignTop="@+id/tvPayToday" android:text="$500"
        android:textSize="18sp" android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvPaymentSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Payment Schedule"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jan 21"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/tvPaymentSchedule"
        android:layout_alignStart="@+id/tvDate2"/>

    <TextView
        android:id="@+id/tvPayment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvDate1"
        android:layout_alignBottom="@+id/tvDate1"
        android:layout_alignEnd="@+id/tvPaymentSchedule"
        android:text="$200"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvDate3"
        android:layout_below="@+id/tvDate1"
        android:layout_marginTop="12dp"
        android:text="Feb 4"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDate3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvPaymentSchedule"
        android:layout_below="@+id/tvDate2"
        android:layout_marginTop="12dp"
        android:text="Feb 18"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDate4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvDate2"
        android:layout_below="@+id/tvDate3"
        android:layout_marginTop="12dp"
        android:text="Mar 4"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDate5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvDate4"
        android:layout_below="@+id/tvDate4"
        android:layout_marginTop="12dp"
        android:text="Mar 18"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPayment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvPayment1"
        android:layout_alignTop="@+id/tvDate2"
        android:text="$200"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPayment3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvDate3"
        android:layout_alignBottom="@+id/tvDate3"
        android:layout_alignStart="@+id/tvPayment2"
        android:text="$200"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPayment4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvDate4"
        android:layout_alignBottom="@+id/tvDate4"
        android:layout_alignEnd="@+id/tvPayment3"
        android:text="$200"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPayment5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvDate5"
        android:layout_alignBottom="@+id/tvDate5"
        android:layout_alignStart="@+id/tvPayment4"
        android:text="$200"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDate6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvDate5"
        android:layout_below="@+id/tvDate5"
        android:layout_marginTop="12dp"
        android:text="Mar 31"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPayment6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvDate6"
        android:layout_alignEnd="@+id/tvPayment5"
        android:text="$200"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTotalPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvDate3"
        android:layout_below="@+id/tvDate5"
        android:layout_marginTop="48dp"
        android:text="TOTAL PAYMENT:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvTotalPaymentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvPayment6"
        android:layout_alignTop="@+id/tvTotalPayment"
        android:layout_below="@+id/tvPayment6"
        android:text="$1200" android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvPayToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_above="@+id/tvPayment1"
        android:layout_alignLeft="@+id/tvPaymentSchedule" android:layout_alignStart="@+id/tvDate1"
        android:layout_marginBottom="10dp"
        android:text="@string/pay_today" android:textSize="18sp" android:textStyle="bold"/>

    <Button
        android:id="@+id/ps_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="49dp"
        android:text="OK"
        android:textAlignment="center"/>

</RelativeLayout>